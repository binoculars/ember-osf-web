{{!Lucene search help modal}}
{{! template-lint-disable bare-strings }}
<div id="ember-bootstrap-modal-container">
    {{#bs-modal open=isOpen as |modal|}}
        {{#modal.header}}
            <h3 class="modal-title">{{t 'app_components.search_help_modal.searchHelp'}}</h3>
        {{/modal.header}}
        {{#modal.body}}
            <h4> {{t 'app_components.search_help_modal.queries'}} </h4>
            <p>
                {{t 'app_components.search_help_modal.searchUsesThe'}} <a href="http://extensions.xwiki.org/xwiki/bin/view/Extension/Search+Application+Query+Syntax">Lucene {{t 'app_components.search_help_modal.searchSyntax'}}</a>.
                {{t 'app_components.search_help_modal.helpDescription'}}
            </p>
            <ul class="ex-list">
                <li><a href={{concat currentPath '?q=repro*'}}>repro*</a></li>
                <li><a href={{concat currentPath '?q=brian+AND+title%3Amany'}}>brian AND title:many</a></li>
                <li><a href={{concat currentPath '?q=tags%3A%28psychology%29'}}>tags:(psychology)</a></li>
            </ul>
        {{/modal.body}}
        {{#modal.footer}}
            {{#bs-button onClick=(action modal.close)}}{{t 'app_components.search_help_modal.close'}}{{/bs-button}}
        {{/modal.footer}}
    {{/bs-modal}}
</div>
