<div class="preprints-page">
    {{!HEADER}}
    <div local-class="header"> {{!HEADER}}
        <div class="container"> {{!CONTAINER}}
            <div class="row">{{!HEADER ROW}}
                {{!TITLE}}
                <div class="text-center m-t-lg col-xs-12">
                    {{#if theme.isProvider}}
                        {{!-- <div local-class="provider-brand" style="background-image: url('/collections/assets/img/osf-bg.jpg')"></div> --}}
                    {{else}}
                        <h1>
                            {{osf-logo}}
                            {{t 'general.OSF'}}
                            {{t 'collections.index.title'}}
                        </h1>
                        {{!-- <div local-class="osf-bg" style="background-image: url('/engines-dist/collections/assets/img/osf-bg.jpg')"></div> --}}
                    {{/if}}
                    <p class="lead">
                        {{#if theme.isProvider}}
                            {{sanitize-html theme.provider.description "description"}}
                            <br>
                            <small>
                                <a href="{{host}}collections" onbeforeclick={{action "click" "link" "Index - Powered By"}}>
                                    {{t "index.header.powered_by"}}
                                </a>
                            </small>
                        {{/if}}
                    </p>
                </div>
                {{!SEARCH}}
                <div class="preprint-search col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2 m-v-lg" >
                    {{!-- {{search-preprints search="search"}} --}}
                    {{#if (not theme.isProvider)}}
                        {{!-- {{total-share-results}} --}}
                    {{/if}}
                </div>
            </div> {{!END ROW}}
            {{#if theme.provider.allowSubmissions}}
                <div class="row">
                    <div class="text-center col-xs-12">
                        <p class="lead">
                            {{t 'index.header.or'}}
                        </p>
                        <a
                            type="button" class="btn btn-success btn-lg preprint-submit-button"
                            onclick={{action "click" "link" "Index - Add preprint"}}
                            href={{concat theme.pathPrefix 'submit'}}
                        >
                            {{t "global.add_preprint"}}
                        </a>
                        <div class="m-t-md">
                            {{#link-to (route-prefix 'content') (if theme.provider.example theme.provider.example 'khbvy') invokeAction=(action "click" "link" "Index - See example")}}
                                {{t "index.header.example"}}
                            {{/link-to}}
                        </div>
                    </div>
                </div>
            {{/if}}
        </div> {{!END CONTAINER}}
    </div> {{!END HEADER}}

    {{!SUBJECTS}}
    <div class="preprint-subjects p-v-md"> {{!SUBJECTS LIST}}
        <div class="container"> {{!CONTAINER DIV}}
            <div class="row p-v-md">{{!SUBJECTS ROW}}
                <div class="col-xs-12">
                    <h2>{{#if theme.provider.additionalProviders}}
                            {{t "index.subjects.heading.provider"}}
                        {{else}}
                            {{!-- {{if theme.provider.hasHighlightedSubjects (t "index.subjects.heading.hasHighlightedSubjects") (t "index.subjects.heading.noHighlightedSubjects")}} --}}
                        {{/if}}
                    </h2>
                    {{#if theme.provider.hasHighlightedSubjects}}
                        {{#link-to (route-prefix 'discover') class="seeAllSubjects"}}
                            {{t 'index.subjects.links.seeAllSubjects'}}
                        {{/link-to}}
                    {{/if}}
                    <div class="subjectsList p-lg"> {{!SUBJECTS LIST}}
                        {{#if theme.provider.additionalProviders}}
                            {{!-- {{additional-provider-list additionalProviders=theme.provider.additionalProviders}} --}}
                        {{else}}
                            {{!-- {{taxonomy-top-list list=model.taxonomies}} --}}
                        {{/if}}
                    </div> {{!END SUBJECTS LIST}}
                </div>
            </div>{{!END ROW}}
        </div> {{!END CONTAINER}}
    </div> {{!END SUBJECTS LIST}}

    {{!ADVISORY GROUP}}
    {{#if theme.provider.advisoryBoard.length}}
        <div class="p-v-md" local-class="advisory">
            <div class="container">
                <div class="row">
                    {{sanitize-html raw=true value=theme.provider.advisoryBoard options=sanitizeOptions}}
                </div>
            </div>
        </div>
    {{/if}}
</div>
