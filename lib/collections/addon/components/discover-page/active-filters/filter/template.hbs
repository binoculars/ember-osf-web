<span class="active-filter {{facet}}" local-class="filter {{extraClass}}">
    {{text}}
    {{#unless hide}}
        <span aria-label="{{ariaLabel}}">
            <button
                class="fa fa-times-circle"
                local-class="removeActiveFilter"
                {{action removeFilterItem}}
            ></button>
        </span>
    {{/unless}}
</span>