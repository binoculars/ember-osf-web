{{!Copied from Ember-SHARE}}
<div class="p-t-md">
    {{#each facetContexts as |context|}}
        <div class="panel panel-default" local-class="facet-panel" hidden={{get context 'options.hidden'}}>
            <div class="panel-heading">
                {{context.title}}
            </div>
            <div class="panel-body" local-class="facet">
                {{component
                    (concat 'discover-page/facets/' context.component)
                    context=context
                    filterChanged=filterChanged
                    filterReplace=filterReplace
                }}
            </div>
        </div>
    {{/each}}
</div>
