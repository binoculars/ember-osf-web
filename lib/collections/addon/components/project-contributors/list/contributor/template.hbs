{{#sortable-item
    tagName="tr"
    model=contributor
    class="contributor-row"
    group=group
    spacing=1
    handle=".handle"
    id=contributor.id
}}
    <td class="text-nowrap author-cols">
        <div class="form-group drag-drop-contrib">
            <span class="fa fa-bars sortable-bars handle small"></span>
            <img class="m-l-xs" src={{contributor.users.profileImage}} height="30" width="30">
            <span class="visible-xs-inline"> {{!CONTRIBUTOR NAME - XS Screen}}
                {{#if contributor.unregisteredContributor}}
                    {{contributor.unregisteredContributor}}
                {{else}}
                    <a href={{contributor.users.links.html}} target="_blank">
                        {{contributor.users.fullName}}
                    </a>
                {{/if}}
                <span class="pull-right remove-contributor-padding-xs">
                    {{!-- 
                    {{#if (and
                        (permissionToRemoveContributor contrib currentUser isAdmin node)
                        (conditionsForContribRemoval contrib contributors authorModification))
                    }}
                        <button class="remove-contributor-xs" {{action 'removeContributor' contrib}} aria-label={{t "components.preprint-form-authors.authors.remove_author"}}>
                            <i class="fa fa-times"> </i>
                        </button>
                    {{/if}}
                    --}}
                </span>
            </span>
        </div>
    </td>

    <td>
        <div class="vert-align-contributor-name hidden-xs">
            {{#if contributor.unregisteredContributor}}
                {{contributor.unregisteredContributor}}
            {{else}}
                <a href={{contributor.users.links.html}} target="_blank">
                    {{contributor.users.fullName}}
                </a>
            {{/if}}
        </div>
    </td>

    <td>
        {{!-- <div class="form-group vert-align-enabled-permissions">
            {{#if (and (not (contributor-is-current-user contrib currentUser)) isAdmin (and canEdit (min-admins contrib contributors authorModification)))}}
                <span class="visible-xs-inline permission-label"><em> {{t "components.preprint-form-authors.authors.permissions"}}: </em></span>
                <select class="text-smaller form-control permission-select" onchange={{action (action 'updatePermissions' contrib) value='target.value'}}>
                    {{#each permissionOptions as |option|}}
                        <option selected={{eq contributor.permission option.value}} value={{option.value}}>
                            {{option.text}}
                        </option>
                    {{/each}}
                </select>
            {{else}}
                <div class="vert-align-disabled-permissions">
                    <span class="visible-xs-inline permission-label"> <em> {{t "components.preprint-form-authors.authors.permissions"}}:  </em></span> <span class="text-smaller"> {{permission-map contributor.permission}} </span>
                </div>
            {{/if}}
        </div> --}}
    </td>
    <td class="bib-padding">
        {{!-- <div class="form-group vert-align">
            <span class="visible-xs-inline checkbox-padding"
                ><em>{{t "components.preprint-form-authors.authors.in_citation"}}:</em>
            </span>
            <input
                disabled={{if (and isAdmin (and canEdit (min-bibliographic contrib contributors authorModification))) false true}}
                onchange={{action (action 'updateBibliographic' contrib) value='target.checked'}}
                checked={{eq contributor.bibliographic true}}
                type="checkbox"
                name="bibliographic"
            >
        </div> --}}
        {{input
            type='checkbox'
            checked=contributor.bibliographic
            change=(action 'toggleBibliographic')
        }}
    </td>
    <td>
        {{!-- <div class="delete-contrib-button form-group vert-align nudge-right hidden-xs">
            {{#if (and (permission-to-remove-contributor contrib currentUser isAdmin node) (conditions-for-contrib-removal contrib contributors authorModification))}}
                <button {{action 'removeContributor' contrib}} class="btn btn-danger btn-sm">
                    {{t "components.preprint-form-authors.remove"}}
                </button>
            {{else}}
                <button class="btn btn-danger btn-sm disabled">
                    {{t "components.preprint-form-authors.remove"}}
                </button>
            {{/if}}
        </div> --}}

        <div>
            <button
                {{action 'remove'}}
                class="btn btn-danger btn-sm"
                disabled={{not canRemove}}
            >
                {{t 'collections.project_contributors.list.contributor.remove'}}
            </button>
        </div>
    </td>
{{/sortable-item}}