<div>
    <ul local-class="nobullet">
        {{#each otherProviders as |item|}}
            <li>
                <label local-class="provider-label">
                    <input
                        type="checkbox"
                        checked="{{if (if-filter item.key activeFilters.providers) 'checked'}}"
                        onclick={{action updateFilters 'providers' item.key}}
                        disabled={{theme.isProvider}}
                    >
                    {{!-- {{filter-replace item.key filterReplace}} --}}
                    {{item.key}}
                    <small>({{number-format item.doc_count}})</small>
                </label>
            </li>
        {{/each}}
        {{#if theme.isProvider}}
            <a
                href="{{osfUrl}}preprints/discover"
                onclick={{action 'click' 'link' 'Discover - Other Preprint Repositories' target=analytics}}
            >
                {{t "discover.main.otherRepositories"}}
            </a>
        {{/if}}
    </ul>
</div>
